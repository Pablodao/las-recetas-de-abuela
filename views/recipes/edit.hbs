</form>

<ul>
  {{#each selectedRecipe.ingredients}}
    <li>{{this}}</li>
    <form
      action="/recipes/{{../selectedRecipe._id}}/ingredients/delete"
      method="POST"
    >
    <input type="hidden" name="ingredients" value="{{this}}">
    <button>X</button></form>
  {{/each}}
</ul>