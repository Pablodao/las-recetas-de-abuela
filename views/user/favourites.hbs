<div class="position-relative">

  <h2 class="mt-4 mb-2 position-absolute top-0 start-50 translate-middle"
     style="color:#CD5C5C">Mis recetas favoritas</h2>
  <div class="container text-center mt-5">
    <div class="mt-5 row align-items-center justify-content-between">
  {{#if hasFavourites}}
  
      {{#each favouriteList}}
        <div class="card mt-5 mx-3 text-center" style="width: 30rem; height:400px"> 
            <h3>{{this.name}}</h3>
            <img class="card-img-top" src="{{this.image}}" alt="imagen" height="200px" />
            <div  class="card-body ">
               <a href="/recipes/{{this._id}}/details">Ver detalles</a>
            </div>
   
            <form action="/recipes/{{this._id}}/my-favourites/isfavourite" method="POST">

            <div class="card-body ">
            <button class="btn btn-outline-secondary ">
                Quitar de favoritos
            </button>
            </div>
            </form>
          </div>
      
      {{/each}}
  </div>
  </div>

    {{else}}
    <div  class="position-relative top-100 start-50 translate-middle mt-5 mx-3 text-center"> 
    <h5 class="mt-5">No has agregado ninguna receta a tus favoritos!</h5>
    </div>
  {{/if}}

</div>

