<div class="position-relative">
 
  <h2  class="mt-4 mb-2 position-absolute top-0 start-50 translate-middle" style="color:#CD5C5C">Recetas creadas por mi</h2>
  <div class="container text-center mt-5">
    <div class="mt-5 row align-items-center justify-content-between">
  {{#if hasRecipes}}
      <div class="container text-center mt-5">
        <div class="row align-items-center justify-content-between">
        {{#each myRecipes}}
        <div class="card mt-5 mx-3 text-center" style="width: 30rem; height:400px"> 
        <h3>{{this.name}}</h3>

        <img class="card-img-top" src="{{this.image}}" alt="receta" width="200px" />
        </div>
        <div class="card-body ">
        <button class="btn btn-outline-secondary "><a href="/recipes/{{this._id}}/edit" style="text-decoration:none">Editar</a></button>
        </div>

        <form action="/recipes/{{this._id}}/delete" method="POST">

        <div class="card-body ">
          <button class="btn btn-danger">
          Borrar Receta
          </button>
        </div>
        </form>
        </div>
        {{/each}}
      </div>
      </div>
{{else}}
  <p>Puedes crear una receta,<a href="/recipes/create">aqu√≠</a>.</p>
{{/if}}

</div>